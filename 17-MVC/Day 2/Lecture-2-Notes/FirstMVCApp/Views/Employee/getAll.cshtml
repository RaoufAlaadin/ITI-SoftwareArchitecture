@using FirstMVCApp.Models;
@{
    ViewBag.Title = "getAll";

    List<Employee> myEmpList = ViewBag.Emps;
}

<h2>getAll</h2>


<a href="/Employee/Create">Create new Employee</a>
<div>

    <table border="1" width="100%">
        <tr style="text-align:center; font-weight:bold;">
            <td> ID </td>
            <td> Name </td>
            <td> Age </td>
            <td> Email </td>
            <td> &nbsp; </td>
            <td> &nbsp; </td>
            <td> &nbsp; </td>

        </tr>
        @* Note:
            if I used ViewBag directly here, it will not autocomplete because it's
            Type is dynamic, that's why we casted it as a List
        *@
        @foreach (var item in myEmpList)
        {
            <tr style="text-align:center; ">

                <td> @item.Id </td>
                <td> @item.Name </td>
                <td> @item.Age </td>
                <td> @item.Email </td>
                <td> <a href="/Employee/getByID/@item.Id">Select Emp</a> </td>
                <td> <a href="/Employee/Edit/@item.Id">Edit Emp</a> </td>
                <td> <a href="/Employee/delete/@item.Id">Delete Emp</a> </td>



            </tr>
        }
    </table>
</div>